<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.bkskjold.nemsport">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NemSport">
        <activity
            android:name=".UI.auth.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".UI.auth.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".UI.auth.SignupActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".UI.auth.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".UI.EventActivity"
            android:exported="false" />
        <activity
            android:name=".UI.CreateEventActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:label="@string/title_activity_create_event"
            android:parentActivityName=".FragmentContainerActivity"/>
        <activity
            android:name=".FragmentContainerActivity"
            android:exported="true"
            android:label="@string/title_activity_fragment_container"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="NemSport"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>