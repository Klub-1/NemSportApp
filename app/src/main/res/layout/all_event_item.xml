<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    android:orientation="vertical"
    android:id="@+id/eventCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/acceptedIv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:background="@drawable/circle_imageview_green"
                app:srcCompat="@drawable/ic_action_done_light" />

            <TextView
                android:id="@+id/eventAcceptedTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/participate"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/sub_title" />
        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                android:id="@+id/eventTitleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fodbold"
                android:textColor="@color/title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventDescTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hygge med gode venner"
                android:textColor="@color/sub_title" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/eventTimeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00-11:30"
                android:textColor="@color/sub_title" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>