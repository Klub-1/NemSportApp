<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NemSport" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bk_red</item>
        <item name="colorPrimaryVariant">@color/bk_gold</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bk_red</item>
    </style>

    <style name="Button.Secondary" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="Theme.NemSport.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.NemSport.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NemSport.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--
    CALENDAR THEME
    https://stackoverflow.com/questions/37301231/android-calendar-view-change-text-color
    -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/bk_gold</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/white</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>


    <!--
    FIREBASE AUTH THEME
    https://stackoverflow.com/questions/44492655/customize-firebase-ui-auth-android
    -->

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="colorPrimary">@color/bk_red</item>
        <item name="colorPrimaryDark">@color/bk_red</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:textColorSecondary">@color/bk_gold</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@drawable/auth_bg</item>
        <item name="android:icon">@drawable/logo_bkskjold</item>

        <item name="android:textColorHint">@color/bk_gold</item>

    </style>

    <style name="FirebaseUI.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FirebaseUI.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/bk_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FirebaseUI.Text.TextInputLayout" parent="@style/FirebaseUI.EditText" />

    <style name="FirebaseUI.Text.HintText" parent="@style/FirebaseUI.EditText" />

    <style name="FirebaseUI.Text.Link">
        <item name="android:textColor">@color/bk_gold</item>
    </style>

</resources>