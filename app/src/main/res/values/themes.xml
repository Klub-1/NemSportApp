<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NemSport" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bk_red</item>
        <item name="colorPrimaryVariant">@color/bk_gold</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bk_red</item>
    </style>

    <style name="Button.Secondary" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="Button.Delete" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/bk_gold</item>
    </style>
    <style name="Theme.NemSport.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.NemSport.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NemSport.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--
    CALENDAR THEME
    https://stackoverflow.com/questions/37301231/android-calendar-view-change-text-color
    -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/bk_gold</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/white</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>